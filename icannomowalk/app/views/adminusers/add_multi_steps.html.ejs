<div class="hero-unit">
<h2><%= user.name %></h2>
  <form id="steps-form" class="form-horizontal" action="/users/<%= user.id %>/createmultisteps" method="POST">
    <fieldset>
      <legend>Add Random Steps</legend>
	<div class="control-group">
  	  <label for="date" class="control-label">Start Date</label>
  	  <div class="controls">
    	   <%- contentTag('input',0,  {type:'date', class:'span6', name:'startdate'}) %>    
  	  </div>
	</div>
  <div class="control-group">
      <label for="date" class="control-label">End Date</label>
      <div class="controls">
         <%- contentTag('input',0,  {type:'date', class:'span6', name:'enddate'}) %>    
      </div>
  </div>
	<div class="form-actions">
        <%- contentTag('input', 'Add', {type: 'submit', class: 'btn btn-primary'}) %>
      </div>
    </fieldset>
  </form>
</div>
